<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsersController</servlet-name>
        <servlet-class>Controller.UsersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersRegisterController</servlet-name>
        <servlet-class>Controller.UsersRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserEditController</servlet-name>
        <servlet-class>Controller.UserEditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userDelController</servlet-name>
        <servlet-class>Controller.userDelController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogoutController</servlet-name>
        <servlet-class>Controller.UserLogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersController</servlet-name>
        <url-pattern>/UsersController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersRegisterController</servlet-name>
        <url-pattern>/UsersRegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserEditController</servlet-name>
        <url-pattern>/UserEditController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userDelController</servlet-name>
        <url-pattern>/userDelController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogoutController</servlet-name>
        <url-pattern>/UserLogoutController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
